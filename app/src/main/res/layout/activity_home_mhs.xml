<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeMhsActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="20dp">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Dashboard Mahasiswa"
			android:textSize="24sp"
			android:textColor="@color/black"
			android:textAlignment="center"
			android:textStyle="bold"
			android:textAllCaps="true"/>

		<TextView
			android:id="@+id/npm"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="npm : 123"
			android:layout_marginTop="10dp"
			android:textColor="@color/black"
			android:textSize="18sp"/>

		<TextView
			android:id="@+id/namaMhs"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="nama : xyz"
			android:textSize="18sp"
			android:textColor="@color/black"/>

		<TextView
			android:id="@+id/jurusan"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="jurusan : ti"
			android:textColor="@color/black"
			android:textSize="18sp"/>

		<Button
			android:id="@+id/btnKelasByMhs"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/simple_bg1"
			android:elevation="5dp"
			android:text="kelas"
			android:layout_marginTop="10dp"/>

		<Button
			android:id="@+id/btnAbsen"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/simple_bg1"
			android:elevation="5dp"
			android:text="absen"
			android:layout_marginTop="10dp"/>

		<Button
			android:id="@+id/btnLogout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/simple_bg1"
			android:elevation="5dp"
			android:text="logout"
			android:layout_marginTop="10dp"/>

	</LinearLayout>

</ScrollView>
